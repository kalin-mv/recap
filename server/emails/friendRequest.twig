    <a style="font-size:20px;background:#9c4221;color:#fff;padding-top:10px;padding-bottom:10px;padding-left:50px;padding-right:50px;text-decoration:none;display:inline-block; border-radius:15px;border:2px solid #fff;border-left:none;border-bottom:none; -webkit-text-size-adjust:none;mso-hide:all;" 
        href={{ publicUrl }}>
