{% extends "layout.twig" %}

{% block content %}

<h2 style="font-size:18px;padding-bottom: 10px;
padding-top: 10px;font-family:'HelveticaNeue','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight: 900;color:#9c4221;text-align:center">
  {{ title }}
</h2>
<a target="_blank" style="text-decoration:none;color:inherit;font-family:'HelveticaNeue','Helvetica Neue',Helvetica,Arial,sans-serif;font-weight:normal;">
							<img src={{url ~ avatar}} alt="User avatar" style="max-width:150px"/>
						</a>
<div style="padding-bottom:20px;border-bottom:1px solid #A6A6A6;">
